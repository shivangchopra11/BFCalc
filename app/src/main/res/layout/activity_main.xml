<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivang.calculator.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:id="@+id/exp"
        android:background="#0000"
        android:focusable="false"
        android:textSize="40dp"
        android:autoSizeTextType="uniform"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:id="@+id/ans"
        android:background="#0000"
        android:focusable="false"
        android:textSize="40dp"
        android:autoSizeTextType="uniform"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/colorSecondaryDark">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="7"
                    android:id="@+id/b7"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="8"
                    android:id="@+id/b8"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:padding="0dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="9"
                    android:id="@+id/b9"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:padding="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/colorSecondaryDark">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="4"
                    android:id="@+id/b4"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="5"
                    android:id="@+id/b5"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="6"
                    android:id="@+id/b6"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/colorSecondaryDark">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="1"
                    android:id="@+id/b1"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="2"
                    android:id="@+id/b2"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="3"
                    android:id="@+id/b3"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/colorSecondaryDark">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="."
                    android:id="@+id/bd1"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="0"
                    android:id="@+id/b0"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorSecondaryDark"
                    android:text="="
                    android:id="@+id/be"
                    android:textColor="@color/white"
                    android:textSize="40dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorSecondaryLight">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorSecondaryLight"
                android:text="CLR"
                android:id="@+id/bc"
                android:textColor="@color/white"
                android:textSize="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorSecondaryLight"
                android:text="รท"
                android:id="@+id/bd"
                android:textColor="@color/white"
                android:textSize="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorSecondaryLight"
                android:text="ร"
                android:id="@+id/bm"
                android:textColor="@color/white"
                android:textSize="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorSecondaryLight"
                android:text="-"
                android:id="@+id/bs"
                android:textColor="@color/white"
                android:textSize="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorSecondaryLight"
                android:text="+"
                android:id="@+id/bp"
                android:textColor="@color/white"
                android:textSize="30dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
